<!-- Diseases manager -->

<div class="diseases">
  <h4>Add new disease in the system</h4>
  <form action="/app/adddisease" method="post">
    <div class="form-group row">
      <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Disease name</label>
      <div class="col-sm-7 col-md-7 col-lg-7">
        <input
          class="form-control"
          style="width: 100%;"
          type="text"
          name="diseaseName"
          required="true"
          placeholder="Enter new disease name..."
        />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Score</label>
      <div class="col-sm-7 col-md-7 col-lg-7">
        <input
          class="form-control"
          style="width: 100%;"
          type="number"
          name="diseaseScore"
          required="true"
          placeholder="Enter new disease score..."
        />
      </div>
    </div>

    <input
      class="btn btn-success"
      style="float: right;"
      type="Submit"
      name="Submit"
      value="Add disease"
    />
  </form>
</div>

<!-- Rooms manage -->
<div class="rooms-manage">
  <h4 style="margin-top: 0px;">Add new room in the system</h4>
  <form action="/app/addroom" method="post">
    <div class="form-group row">
      <label class="col-sm-5 col-md-5 col-lg-5 col-form-label">Room name</label>
      <div class="col-sm-7 col-md-7 col-lg-7">
        <input
          class="form-control"
          style="width: 100%;"
          type="text"
          name="roomName"
          required="true"
          placeholder="Enter new room name..."
        />
      </div>
    </div>

    <input
      class="btn btn-success"
      style="float: right;"
      type="Submit"
      name="Submit"
      value="Add room"
    />
  </form>
</div>

  <!-- Add new room -->
<div class="add-room">
<div class="col-md-4 col-lg-4" style="padding-right: 30px; padding-left: 30px;">
  <div class="row">
  </div>
</div>


  <!-- Delete room -->
<div class="delete-room">
  <div class="row">
    <h4>Delete rooms from the system</h4>
    <form action="/app/deleterooms" method="post">
      <table
        id="rooms-table"
        class="table table-striped table-bordered"
        cellspacing="0"
        width="100%"
      >
        <!-- JavaScript works here! -->
      </table>

      <input
        class="btn btn-danger"
        style="float: right;"
        type="Submit"
        name="Submit"
        value="Delete rooms"
      />
    </form>
  </div>
</div>

